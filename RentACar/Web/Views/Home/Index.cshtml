@model List<Web.VehicleReference.VehicleInformation>
@{
    ViewBag.Title = "Anasayfa";
}

<div class="row">
    <div class="col-md-12">
        <h2>Kiralanabilir Araçlar</h2>
    </div>
</div>

<div class="jumbotron">
    <table id="vehicle-list" class="table table-striped table-bordered">

        <thead>
            <tr>
                <th>Marka</th>
                <th>Model</th>
                <th>Günlük Kiralama Bedeli (₺)</th>
                <th>Minimum Ehliyet Yaşı</th>
                <th>Minimum Sürücü Yaşı</th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var vehicle in Model)
            {
                if (!vehicle.isRentaled)
                {
                    <tr id=@vehicle.Id>
                        <td>@vehicle.Name</td>
                        <td>@vehicle.Model</td>
                        <td>@vehicle.DailyRentalPrice</td>
                        <td>@vehicle.MinLicenseAge</td>
                        <td>@vehicle.MinAge</td>
                        <td> <a href="@Url.Action("Index","Rent", new { vehicleId = vehicle.Id })" class="text-dark">Kirala</a> </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>